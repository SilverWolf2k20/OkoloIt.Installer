<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:OkoloIt.Installer.Template.ViewModels.Pages"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="OkoloIt.Installer.Template.Views.Pages.InstalationCompletePageView"
             x:DataType="vm:InstalationCompletePageViewModel">

    <DockPanel>
        <!-- Кнопки перехода -->
        <StackPanel DockPanel.Dock="Bottom"  HorizontalAlignment="Right"
                    Orientation="Horizontal" Spacing="10">
            <Button Content="Готово" Command="{Binding CloseCommand}"/>
        </StackPanel>

        <!-- Содержимое страницы -->
        <StackPanel Spacing="10">
            <TextBlock Margin="0 0 0 20"
                       FontWeight="Bold"
                       Text="Установка завершена"/>

            <TextBlock Text="Нажмите Готово чтобы выйти из установщика."/>
            
            <CheckBox IsChecked="{Binding CanRunProgram}" Content="Запустить OkoloIt.Installer."/>
        </StackPanel>
    </DockPanel>
</UserControl>
